{
    "name": "foodieneers/bridge",
    "description": "Basic auth system for Laravel Intraserver api communication",
    "type": "package",
    "keywords": [
        "foodieneers",
        "laravel",
        "api-auth"
    ],
    "homepage": "https://github.com/foodieneers/api-auth",
    "license": "MIT",
    "authors": [
        {
            "name": "Paride Azzari",
            "email": "paride21azzari@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "foodieneers/laravel-devtools": "dev-main",
        "matthewbdaly/artisan-standalone": "*",
        "nunomaduro/mock-final-classes": "^1.2",
        "orchestra/testbench": "*"
    },
    "autoload": {
        "psr-4": {
            "Foodieneers\\Bridge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foodieneers\\Bridge\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "format": "vendor/bin/pint",
        "dep:bump": [
            "composer bump"
        ],
        "lint": [
            "rector",
            "pint --parallel"
        ],
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:lint": [
            "pint --parallel --test",
            "rector --dry-run"
        ],
        "pest": "pest",
        "test:unit": "pest --parallel --coverage --exactly=100.0",
        "test:types": "phpstan"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Foodieneers\\Bridge\\BridgeServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
